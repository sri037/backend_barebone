{
  "rules": {
    "no-invalid-this": [
      true,
      "check-function-in-method"
    ],
    "no-duplicate-super": true,
    "new-parens": true,
    "prefer-method-signature": true,
    "interface-over-type-literal": true,
    "prefer-const": false,
    "no-require-imports": false,
    "typedef": [
      true,
      "arrow-call-signature",
      "array-destructuring",
      "arrow-parameter",
      "call-signature",
      "member-variable-declaration",
      "object-destructuring",
      "parameter",
      "property-declaration",
      "variable-declaration"
    ],
    "no-null-keyword": true,
    "quotemark": [
      true,
      "single",
      "double"
    ],
    "encoding": true,
    "max-file-line-count": [false, 1500],
    "max-line-length": [
      false,
      140
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations",
      "allow-named-functions"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always",
        "method": "never",
        "constructor": "never"
      }
    ],
    "newline-before-return": true,
    "newline-per-chained-call": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace",
      "check-else",
      "check-catch",
      "check-finally"
    ],
    "no-consecutive-blank-lines": [
      true,
      1
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-within-parens": 0,
    "class-name": true,
    "comment-format": [
      true,
      "check-space",
      {"ignore-words": ["TODO"]}
    ],
    "jsdoc-format": [
      true,
      "check-multiline-start"
    ],
    "no-console": [
      false,
      "log",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-eval": true,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],

    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-snake-case"
    ],
    "comma-style": [
      "comma-dangle"
    ]
  }
}
